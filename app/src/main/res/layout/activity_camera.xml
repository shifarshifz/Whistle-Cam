<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    tools:context="com.shifz.whistlecam.activities.CameraActivity">

    <SurfaceView
        android:id="@+id/svCameraPreview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100" />

    <LinearLayout
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/ibChangeCamera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/simple_selector"
            android:src="@drawable/ic_switch_camera_white_36dp" />

        <ImageButton
            android:id="@+id/ibToggleFlash"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/simple_selector"
            android:src="@drawable/ic_flash_off_white_36dp" />


    </LinearLayout>

</LinearLayout>
